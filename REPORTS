int main()
{
srand(time(0));
int grade = rand() % 11;
int N;

cout << "Please, enter the number of students " << endl;
cin >> N;
int student[N];
cout << "Please find below the grades: " << endl;
for (int i = 0; i < N; i++){
    int grade = rand() % 11;
    student[i] = grade;
    cout << "STUDENT NR " << i + 1 << ": " << student[i] << endl;
}

countMean(N, student);
}
