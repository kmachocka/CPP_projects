#include <iostream>
#include <cmath>
#include <ctime>
#include <cstdlib>


using namespace std;

double countMean(int N, int student[]){
    double sum = 0;
    double mean;
    for (int i = 0 ; i < N; i++){
    sum = sum + student[i];
    }
mean = sum / N;
cout << "The mean equals: " << mean << endl;
 return mean;
}



